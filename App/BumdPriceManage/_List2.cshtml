
@model T_SerYearlyPriceView

<div class="netcaretable">
    <div class="columns  columns-right btn-group pull-left bottombtn" style=" " id="tbar2">
        <button class="btn btn-default" type="button" title="增加" id="add2" style="display:none" onclick="if($('#SerYearlyPriceId').val()==0){ msg.info('请先保存主数据！');return false;};msg.loadBtn('service/BumdPriceManage/Edit?type=2','新增');">
            <i class="fa fa-plus"></i>&nbsp;增加
        </button>
        <button class="btn btn-default" type="button" title="导入" id="import2" style="display:none" onclick="if ($('#SerYearlyPriceId').val() == 0) { msg.info('请先保存主数据！'); return false; }; msg.loadBtn('admin/SysAttachment/Index?type=2', '新增', 700, 450);">
            <i class="fa fa-file-excel-o"></i>&nbsp;导入
        </button>
        <button class="btn btn-default" type="button" title="下载" id="export2" onclick="location.href='@(Url.Content("~/Images/BUMD/年度一般经销商价格-BUI (FKC）.xlsx"))' ">
            <i class="fa fa-download"></i>&nbsp;下载
        </button>
        <button class="btn btn-default" type="button" title="删除" id="delete2" style="display:none" onclick="DeletePro('productinfo2','tbar2');">
            <i class="fa fa-minus"></i>&nbsp;删除
        </button>
    </div>
    <table id="productinfo2"></table>
</div>

<script>
    var productColumns2 = [
{
    checkbox: true
}, {
    title: '序号',
    align: 'center',
    width: 50,
    formatter: function (value, row, index) {
        return m_pagerow + index + 1;
    }
}, {
    field: 'BU',
    title: 'BU',
    visible: true,
    align: 'center'
}, {
    field: 'ProductCode',
    title: '产品编码',
    visible: true,
    align: 'center'
}, {
    field: 'ProductName',
    title: '产品名称',
    align: 'center',
    width:350,
    formatter: function (value, row, index) {

        return '<span style="text-decoration: underline;cursor: pointer;" onclick="openLayer(\'service/BumdPriceManage/Edit/' + row.SerYearlyPriceListId + '?type=2\',\'更新\',\'\',\'\','+jsonObj._Status+');">' + value + '</span>';
    }
}, {
    field: 'WholesalerPrice',
    title: '经销商价格',
    align: 'center',
    formatter: function (value, row, index) {
        return  _numberDelimiter.getNumberDelimiterResult((value).toFixed(2))+"元";
    }
}, {
    field: 'SpotDealerPrice',
    title: 'Spot Dealer价格',
    align: 'center',
    hidden:true,
    formatter: function (value, row, index) {
        return  _numberDelimiter.getNumberDelimiterResult((value).toFixed(2))+"元";
    }

}, {
    field: 'EffectiveStart',
    title: '有效期起',
    align: 'center'
}, {
    field: 'EffectiveEnd',
    title: '有效期止',
    align: 'center'
} , {
    field: 'Remark',
    title: '备注',
    align: 'center'
}
    ];


    var dbQueryParamsPro2 = function (params) {
        var temp = {};
        temp["PageSize"] = params.limit;
        temp["PageIndex"] = params.offset;
        temp["SerYearlyPriceId"] = $("#SerYearlyPriceId").val();
        temp["TableType"] = 2;
        return temp;
    };

    function loadProduct2(fun) {
        var actionUrl = path + 'service/BumdPriceManage/DetailList';
        InitTable($("#productinfo2"), actionUrl, dbQueryParamsPro2, productColumns2, "", "", "tbar2",function(e){
            $("#ba2").html(e.total);
            if(fun){
                fun();
            }
        });
    }
</script>