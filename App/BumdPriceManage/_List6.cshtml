					<script>
					var productColumns6= [
        {
            checkbox: true
        }, {
            title: '序号',
            align: 'center',
            width: 50,
            formatter: function (value, row, index) {
                return m_pagerow + index + 1;
            }
        }, {
            field: 'BU',
            title: 'BU',
            visible: true,
            align: 'center'
        }, {
            field: 'ProductCode',
            title: '产品编码',
            visible: true,
            align: 'center'
        }, {
            field: 'ProductName',
            title: '产品名称',
            align: 'center',
