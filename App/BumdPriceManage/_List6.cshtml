	var dbQueryParamsPro6 = function (params) {
		var temp = {};
		temp["PageSize"] = params.limit;
		temp["PageIndex"] = params.offset;
		temp["SerYearlyPriceId"] = $("#SerYearlyPriceId").val(); 
		temp["TableType"] = 6; 
		return temp;
	};
     
    function loadProduct6(fun) {
         var actionUrl = path + 'service/BumdPriceManage/DetailList';
        InitTable($("#productinfo6"), actionUrl, dbQueryParamsPro6, productColumns6, "", "", "tbar6",function(e){
            $("#ba6").html(e.total);
            if(fun){
                fun();
            }
		});
