                return '<span style="text-decoration: underline;cursor: pointer;" onclick="openLayer(\'service/BumdPriceManage/Edit/' + row.SerYearlyPriceListId + '?type=6\',\'更新\',\'\',\'\','+jsonObj._Status+');">' + value + '</span>';
